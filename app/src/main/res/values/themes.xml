<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StocksPokedex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="transparent">#00ffffff</item>
        <item name="colorPrimary">#7156E3</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="backgroundColor">#F4F8FB</item>
        <item name="colorAccent">#7858FE</item>
        <item name="colorAccentDarker">#4624D3</item>
        <item name="colorAccentVariant">#7F6AD5</item>
        <item name="colorAccentFaded">#207858FE</item>
        <item name="colorTextSecondary">#38444C</item>
        <item name="colorTextSecondaryVariant">#B7535EA5</item>
        <item name="colorTextPrimary">#222A31</item>
        <item name="android:textColor">#222A31</item>
        <item name="colorSeparatingLine">#27797E81</item>
        <item name="colorGreenVariant">#00873C</item>
        <item name="colorRedVariant">#EB0F29</item>
        <item name="colorStatistics">#0F9AF7</item>
        <item name="colorStatisticsDark">#0766A6</item>
        <item name="colorStatisticsFaded">#200F9AF7</item>
        <item name="colorProgressSeekbar">#805F528F</item>
        <item name="colorControlHighlight">?attr/colorTextSecondary</item>
        <item name="android:fontFamily">@font/varelaround</item>
        <item name="colorRipple">#8B4E4E4E</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.StocksPokedex.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StocksPokedex.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StocksPokedex.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">?attr/colorRedVariant</item>
        <item name="colorPrimaryDark">?attr/colorAccentDarker</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="colorControlActivated">?attr/colorRedVariant</item>
        <item name="hintTextColor">?attr/colorTextSecondary</item>
        <item name="colorControlNormal">?attr/colorTextSecondary</item>
        <item name="colorError">?attr/colorRedVariant</item>
    </style>

    <style name="error" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorRedVariant</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

</resources>