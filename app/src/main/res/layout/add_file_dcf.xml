<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dcfLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_start_4"
    android:layout_marginTop="@dimen/margin_top_24"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/priceTargetLayout"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/dcfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discounted_cash_flow"
        android:textColor="?attr/colorTextSecondaryVariant"
        android:textSize="@dimen/text_18" />

    <ImageView
        android:id="@+id/addDCFFileImage"
        android:layout_width="@dimen/icon_28"
        android:layout_height="@dimen/icon_28"
        android:layout_marginStart="@dimen/margin_start_8"
        android:layout_toEndOf="@id/dcfText"
        android:background="@drawable/round_button_ripple"
        android:contentDescription="@string/add_a_dcf_file_button"
        android:src="@drawable/ic_add_file" />

    <TextView
        android:id="@+id/dcfFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dcfText"
        android:textColor="?attr/colorTextSecondary"
        android:textSize="@dimen/text_14" />
</RelativeLayout>