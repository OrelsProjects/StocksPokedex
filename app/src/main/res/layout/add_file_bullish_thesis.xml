<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bullishThesisLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_start_4"
    android:layout_marginTop="@dimen/margin_top_24"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/checklistFlexbox"
    tools:ignore="UseCompoundDrawables"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/bullishThesisText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullish_thesis"
        android:textColor="?attr/colorTextSecondaryVariant"
        android:textSize="@dimen/text_18" />

    <ImageView
        android:id="@+id/addBullishThesisFileImage"
        android:layout_width="@dimen/icon_28"
        android:layout_height="@dimen/icon_28"
        android:layout_marginStart="@dimen/margin_start_8"
        android:background="@drawable/round_button_ripple"
        android:layout_toEndOf="@id/bullishThesisText"
        android:contentDescription="@string/add_a_bullish_thesis_file"
        android:src="@drawable/ic_add_file" />

    <TextView
        android:id="@+id/bullishThesisFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bullishThesisText"
        android:textColor="?attr/colorTextSecondary"
        android:textSize="@dimen/text_14" />
</RelativeLayout>
